<div>
  <hr>
  <h3>
    <i class="fa fa-shopping-cart" aria-hidden="true"></i>
    {{t "buyerCenterMenu.buyerCenter"}}
  </h3>
  <div class="panel panel-default sidebar-menu">
    <div class="panel-heading">
      <h4 class="panel-title">{{t "buyerCenterMenu.business"}}</h4>
    </div>
    <div class="panel-body">
      <ul class="nav nav-pills nav-stacked">
        <li
          {{#ifEquals originalUrl '/live-market/application-list'}}
          class="active"
          {{/ifEquals}}
        >
          <a href="/live-market/application-list">
            {{t "buyerCenterMenu.myGroupbuying"}}
          </a>
        </li>
      </ul>
    </div>
  </div>
  <div class="panel panel-default sidebar-menu">
    <div class="panel-heading">
      <h4 class="panel-title">{{t "buyerCenterMenu.account"}}</h4>
    </div>
    <div class="panel-body">
      <ul class="nav nav-pills nav-stacked">
        <li
          {{#ifEquals originalUrl '/live-market/profile'}}
          class="active"
          {{/ifEquals}}
        >
          <a href="/live-market/profile">
            {{t "buyerCenterMenu.editProfile"}}
          </a>
        </li>
        <li
          {{#ifEquals originalUrl '/live-market/change-password'}}
          class="active"
          {{/ifEquals}}
        >
          <a href="/live-market/change-password">
            {{t "buyerCenterMenu.changePassword"}}
          </a>
        </li>
        <li>
          <a href="#">
            {{t "buyerCenterMenu.logOut"}}
          </a>
        </li>
      </ul>
    </div>
  </div>
</div>
