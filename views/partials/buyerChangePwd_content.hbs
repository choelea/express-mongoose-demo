<div class="container buyer-changePwd-page">
  <div class="row">
    <div class="col-sm-4 col-md-3">
      {{>buyerCenterMenu}}
    </div>
    <div class="col-sm-8 col-md-9" id="customer-orders">
      {{>buyerCenterBreadcrumb}}
      <hr>
      <div class="row">
        <div class="col-md-10 col-md-offset-1">
          <form class="form-horizontal buyer-changePwd-form" id="buyerChangePwdForm">
            <div class="form-group">
              <label class="col-sm-4 control-label">
                <em class="iq-color">*</em>
                {{t "buyerCenter.currentPassword"}} :
              </label>
              <div class="col-sm-8">
                <input type="password" class="form-control" id="oldpwd" name="oldpwd" required minlength="6" maxlength="12">
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-4 control-label">
                <em class="iq-color">*</em>
                {{t "buyerCenter.newPassword"}} :
              </label>
              <div class="col-sm-8">
                <input type="password" class="form-control" id="newpwd" name="newpwd" required minlength="6" maxlength="12">
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-4 control-label">
                <em class="iq-color">*</em>
                {{t "buyerCenter.confirmNewPassword"}} :
              </label>
              <div class="col-sm-8">
                <input type="password" class="form-control" id="newpwdConfirm" name="newpwdConfirm" required minlength="6" maxlength="12">
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-offset-4 col-sm-8">
                <button type="submit" class="btn btn-primary">{{t "buyerCenter.submit"}}</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>

  </div>
</div>
